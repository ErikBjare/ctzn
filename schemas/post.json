{
  "id": "ctzn.network/post",
  "title": "Post",
  "description": "A social media feed post",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["text", "createdAt"],
    "additionalProperties": false,
    "properties": {
      "text": {
        "type": "string",
        "minLength": 1,
        "maxLength": 256
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}