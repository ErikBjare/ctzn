{
  "$id": "https://ctzn.network/follow-idx.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Follows Index",
  "description": "Aggregated follows for users on the server",
  "type": "object",
  "required": ["userUrl", "followerUrls"],
  "additionalProperties": false,
  "properties": {
    "userUrl": {
      "type": "string",
      "format": "uri"
    },
    "followerUrls": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}